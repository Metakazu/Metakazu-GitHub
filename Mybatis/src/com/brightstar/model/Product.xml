<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 命名空间 -->
<mapper namespace="com.brightstar.model">
	<select id="selectPWithC" resultMap="ProductBean">
		select c.id cid,c.name cname,p.id pid,p.name pname,price from datebase.product p join datebase.category c on c.id=p.cid;
	</select>

	<resultMap type="Product" id="ProductBean">
		<id column="pid" property="id" />
		<result column="pname" property="name" />
		<result column="price" property="price" />


		<association property="category" javaType="Category">
		
			<id column="cid" property="id" />
			<result column="cname" property="name" />

		</association>
	</resultMap>


</mapper>