<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 命名空间 -->
<mapper namespace="com.brightstar.model">
	<select id="selectAllCategory" resultType="Category">
		select * from datebase.category;
	</select>

	<insert id="insertCategory" parameterType="String">
		INSERT INTO datebase.CATEGORY VALUES (null,#{name});
	</insert>

	<!-- <update id="updateCategory" parameterType="Category">
		update datebase.category set name =#{name} where ID=#{id};
	</update> -->

	<update id="updateCategory" parameterType="Map">
		update datebase.category set name =#{name} where ID=#{id};
	</update>

	<delete id="deleteCategory" parameterType="Category">
		delete from datebase.category where id= #{id}
	</delete>

	<select id="selectOneCategory" parameterType="Integer" resultType="Category">
	select * from datebase.category where id= #{id};
	</select>
	<!-- 模糊查询，存在特殊字符，因此用concat链接字符 -->
	<select id="selectCategoryLike" parameterType="String" resultType="Category">
	SELECT * FROM datebase.category where name like concat('%',#{name},'%');
	</select>

</mapper>